<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".LoginActivity" >
   
    <RelativeLayout
        android:id="@+id/rl_all"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:background="#d9f8c9"
        >
        <RelativeLayout 
            android:id="@+id/mid_rl"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_centerInParent="true"
            android:background="#d9f8c9">
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/mid_rl"
            android:layout_marginBottom="30dp"
            android:padding="2dp"
            
            >
        	<TextView 
            	android:id="@+id/login_name"
            	android:layout_height="wrap_content"
            	android:layout_width="85dp"
            	android:text="StudentID:"
            	android:textColor="#3d3d3c"
            	android:textSize="15sp"
            	android:layout_marginRight="5dp"
            	android:layout_marginTop="2dp"
            	android:layout_alignParentTop="true"
            	android:layout_alignParentLeft="true"/>
            <RelativeLayout 
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:padding="2dp"
                android:layout_toRightOf="@+id/login_name"
                android:background="#616239"        	
                >
                <EditText
            	android:id="@+id/login_input_name"
            	android:layout_width="130dp"
            	android:layout_height="wrap_content"
            	android:textSize="18sp"
            	android:hint="input ID"
            	android:textColor="#3d3d3c"
            	android:background="#f7fab1"
            	
            	android:maxLength="8"
            	android:singleLine="true"
            	 />
        	</RelativeLayout>
        </RelativeLayout>
        
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/mid_rl"
            android:layout_marginBottom="3dp"
            android:padding="2dp"
            
            >
        	<TextView 
            	android:id="@+id/login_password"
            	android:layout_height="wrap_content"
            	android:layout_width="85dp"
            	android:text="Password:"
            	android:textColor="#3d3d3c"
            	android:textSize="15sp"
            	android:layout_marginTop="2dp"
            	android:layout_marginRight="5dp"
            	android:layout_alignParentTop="true"
            	android:layout_alignParentLeft="true"/>
        <RelativeLayout 
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:padding="2dp"
                android:layout_toRightOf="@+id/login_password"
                android:background="#616239"        	
                >
        	<EditText
            	android:id="@+id/login_input_password"
            	android:layout_width="130dp"
            	android:layout_height="wrap_content"
            	android:textSize="18sp"
            	android:hint="input password"
            	android:textColor="#3d3d3c"
            	android:background="#f7fab1"
            	android:layout_alignParentTop="true"
            	android:maxLength="8"
            	android:singleLine="true"
            	 />
        	</RelativeLayout>
        </RelativeLayout>
        <RelativeLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/mid_rl">
        <Button
            android:id="@+id/loginbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log in"
            android:textSize="30dp"
            android:background="#59a019"
            android:textColor="#ffffff"
            android:layout_marginRight="7dp"/>
        <Button
            android:id="@+id/signinbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:textSize="30dp"
            android:layout_toRightOf="@+id/loginbtn"
            android:background="#59a019"
            android:textColor="#ffffff"/>
    	</RelativeLayout>
    	<TextView 
    	    android:id="@+id/error_msg"
    	    android:layout_height="wrap_content"
    	    android:layout_width="wrap_content"
    	    android:layout_below="@+id/mid_rl"
    	    android:layout_marginTop="40dp"
    	    android:text="The ID or Password you have inputted is wrong"
    	    android:textColor="#ff00ff"
    	    android:textSize="10sp"
    	    android:layout_centerHorizontal="true"
    	    android:visibility="invisible"/>
    </RelativeLayout>
</RelativeLayout>
